@model IAsyncEnumerable<Post>;
@{
  ViewData[Constants.Title] = "Posts";
}

<header class="container">
  <h1>Posts</h1>
</header>
<section class="sub-header">
  <div class="container">
    <a asp-area="Admin" asp-controller="Posts" asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i></a>
  </div>
</section>

<section class="container">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date</th>
        <th>Categories</th>
        <th>Tags</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @await foreach (var post in Model)
      {
        <tr>
          <td><a asp-area="Admin" asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id">@post.Title</a></td>
          <td>@post.Author</td>
          <td>
            @((post.PublishedOn ?? post.ModifiedOn).ToString("yyyy-MM-dd HH:mm zz")) @if (post.PublishedOn.HasValue)
            {<i class="fa fa-check" aria-hidden="true"></i>}
          </td>
          <td>@string.Join(',', post.Categories)</td>
          <td>-</td>
          <td>
            <form asp-area="Admin" asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id" method="post">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      }
    </tbody>
  </table>
</section>
