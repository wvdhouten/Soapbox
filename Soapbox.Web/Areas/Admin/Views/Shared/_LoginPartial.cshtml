@using Microsoft.AspNetCore.Identity
@inject SignInManager<Soapbox.Core.Identity.SoapboxUser> SignInManager
@inject UserManager<Soapbox.Core.Identity.SoapboxUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
  <a asp-area="" asp-controller="Account" asp-action="Index">@User.Identity.Name</a><text> - </text>
  <a asp-area="Admin" asp-controller="Site" asp-action="Dashboard">Admin</a>
  <form id="logout" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Pages", new { Area = "" })" method="post" style="display: none;"></form>
  <a asp-area="" asp-controller="Account" asp-action="Logout" submit-form="logout">Logout</a>
}
else
{
  <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
}
