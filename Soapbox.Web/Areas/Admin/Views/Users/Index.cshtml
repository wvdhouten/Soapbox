@model IEnumerable<Soapbox.Core.Identity.SoapboxUser>;

  <div class="container wide">
    <header>
      <h1>Users <a asp-area="Admin" asp-controller="Users" asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i></a>
      </h1>
    </header>

    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var user in Model)
        {
          <tr>
            <td>@user.UserName</td>
            <td>@user.DisplayName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
              <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
