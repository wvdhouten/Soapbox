@model Soapbox.Web.Areas.Admin.Models.Users.CreateUserViewModel

  <header>
    <h1>@ViewData[Constants.Title]</h1>
    <h4>Create a new user.</h4>
  </header>

  <div>
    <div>
      <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-field">
          <label asp-for="@Model.Username"></label>
          <input asp-for="@Model.Username" />
          <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
        <div class="form-field">
          <label asp-for="@Model.Email"></label>
          <input asp-for="@Model.Email" />
          <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-field">
          <label asp-for="@Model.Role"></label>
          <select asp-for="@Model.Role" asp-items="Html.GetEnumSelectList<Soapbox.Core.Identity.UserRole>()">
            <option value="" selected>Please select</option>
          </select>
          <span asp-validation-for="@Model.Role" class="text-danger"></span>
        </div>
        <div class="form-field">
          <label asp-for="@Model.Password"></label>
          <input asp-for="@Model.Password" />
          <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="form-field">
          <label asp-for="@Model.ConfirmPassword"></label>
          <input asp-for="@Model.ConfirmPassword" />
          <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit">Create</button>
      </form>
    </div>
  </div>


