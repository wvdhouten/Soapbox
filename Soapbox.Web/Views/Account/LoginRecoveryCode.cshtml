@model Models.Account.LoginRecoveryCodeModel
@{
  ViewData[Constants.Title] = "Recovery code verification";
}

<div class="card">
  <header class="centered">
    <h1>@ViewData[Constants.Title]</h1>
  </header>

  <div class="separator"></div>

  <section>
    <p>You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable 2FA and log in again.</p>
    <form id="login" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Input.RecoveryCode"></label>
        <input asp-for="Input.RecoveryCode" autocomplete="off" />
        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
      </div>
    </form>
  </section>

  <div class="actions centered">
    <button form="login" type="submit" class="large">Log in</button>
  </div>
</div>
