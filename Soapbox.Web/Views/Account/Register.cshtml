@model Models.Account.RegisterModel
@{
  ViewData[Constants.Title] = "Register";
}

<style>
  #external-account {
    display: flex;
    justify-content: center;
    gap: 6px;
  }

    #external-account button {
      font-size: 1.5rem;
      background-color: transparent;
      color: var(--text-color);
      border: none;
      padding: .25rem;
    }
</style>

<div class="container content">
  <div class="card">
    <header class="centered">
      <h1>@ViewData[Constants.Title]</h1>
    </header>

    <div class="separator"></div>

    <section>
      <form id="register" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="Username"></label>
          <input asp-for="Username" />
          <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Email"></label>
          <input asp-for="Email" />
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Password"></label>
          <input asp-for="Password" />
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="ConfirmPassword"></label>
          <input asp-for="ConfirmPassword" />
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
      </form>
    </section>

    <div id="submit" class="actions centered">
      <button form="register" type="submit" class="large">Register</button>
    </div>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
      <div class="separator">or</div>
      <form id="external-account" class="form-horizontal" asp-controller="Account" asp-action="LoginExternal" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        @foreach (var provider in Model.ExternalLogins)
        {
          <button type="submit" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="icon-@provider.DisplayName.ToLower()"></i></button>
        }
      </form>
    }
  </div>
</div>
