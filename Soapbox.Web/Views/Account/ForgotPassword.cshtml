@model Models.Account.ForgotPasswordModel
@{
  ViewData[Constants.Title] = "Forgot your password?";
}

<div class="card">
  <header class="centered">
    <h1>@ViewData[Constants.Title]</h1>
  </header>

  <section>
    <form method="post">
      <div asp-validation-summary="ModelOnly"></div>
      <div class="form-group">
        <input asp-for="Input.Email" />
        <span asp-validation-for="Input.Email"></span>
      </div>
      <div id="submit" class="centered">
        <button class="large" type="submit">Submit</button>
      </div>
    </form>
  </section>
</div>
