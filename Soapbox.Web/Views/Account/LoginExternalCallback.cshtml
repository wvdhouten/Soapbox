@model Models.Account.LoginExternalModel
@{
  ViewData[Constants.Title] = "Register";
}

<div class="container content">
  <div class="card">
    <header class="centered">
      <h1>@ViewData[Constants.Title]</h1>
      <h4>Associate your @Model.ProviderDisplayName account.</h4>
    </header>

    <div class="separator"></div>

    <section>
      <p class="text-info">
        You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
        Please enter a username and an email address for this site below and click the Register button to finish logging in.
      </p>

      <form id="register" asp-controller="Account" asp-action="@nameof(Controllers.AccountController.LoginExternalConfirmation)" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="Username"></label>
          <input asp-for="Username" />
          <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Email"></label>
          <input asp-for="Email" />
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>
      </form>
    </section>

    <div class="actions centered">
      <button form="register" type="submit" class="large">Register</button>
    </div>
  </div>
</div>
