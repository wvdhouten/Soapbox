@model PostCategory
@{
  ViewData["Title"] = $"Category: {Model.Name}";
}

<div class="container content">
  <header>
    <h1>@Model.Name (@Model.Posts.Count)</h1>
  </header>

  <section>
    <div class="item-list">
      @if (Model.Posts.Count > 0)
        foreach (var post in Model.Posts)
        {
          <div>@post.PublishedOn.ToString("yyyy-MM-dd") <blog-link post="post" /></div>
        }
      }
      else
      {
        <p>No posts found!</p>
      }
    </div>
  </section>
</div>
