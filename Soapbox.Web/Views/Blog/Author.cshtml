@model SoapboxUser
@{
  var name = !string.IsNullOrEmpty(Model.DisplayName) ? Model.DisplayName : Model.UserName;
  ViewData["Title"] = $"Author: {name}";
}

<header>
  <div class="container">
    <h1>Author: @name</h1>
  </div>
</header>

<div class="container">
  <ul>
    @foreach (var post in Model.Posts)
    {
      <li>@post.PublishedOn.ToString("yyyy-MM-dd") <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-slug="@post.Slug">@post.Title</a></li>
    }
  </ul>
</div>
