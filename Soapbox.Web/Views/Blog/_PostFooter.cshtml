@model Post
@{
  var url = System.Net.WebUtility.UrlEncode(Url.Action("Post", "Blog", new { Area = "", Slug = Model.Slug }, Context.Request.Scheme, Context.Request.Host.Value));
  var text = System.Net.WebUtility.UrlEncode(Model.Title);
  var viewMode = (string)ViewData["ViewMode"];
  var isFullPost = string.IsNullOrWhiteSpace(Model.Excerpt);
}

<footer>
  <aside class="container">
    @if (!isFullPost && viewMode != "Full")
    {
      <div class="centered">
        <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-slug="@Model.Slug" class="button outline small">Read More</a>
      </div>
    }
    <div class="share">
      <span class="subtle">Share:</span>
      <a href="https://www.facebook.com/sharer/sharer.php?u=@url" target="_blank" title="Share on Facebook" rel="noopener noreferrer nofollow">
        <i class="fa fa-facebook-official" aria-hidden="true"></i>
      </a>
      <a href="https://twitter.com/intent/tweet?url=@url&text=@text" target="_blank" title="Share on Twitter" rel="noopener noreferrer nofollow">
        <i class="fa fa-twitter" aria-hidden="true"></i>
      </a>
      <a href="mailto:?subject=@url.Replace(" ", "%20")&amp;body=@url" target="_blank" title="Email" rel="noopener noreferrer nofollow">
        <i class="fa fa-envelope" aria-hidden="true"></i>
      </a>
    </div>
  </aside>
</footer>
