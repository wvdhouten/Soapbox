@model Post
  <style>
    .headline {
      margin-bottom: 20px;
    }

      .headline a {
        color: var(--accent-color);
      }
  </style>

  <article class="headline">
    <header><a asp-controller="Blog" asp-action="Post" asp-route-slug="@Model.Slug">@Model.Title</a></header>
    <section class="metadata"><time datetime="@((Model.PublishedOn??Model.ModifiedOn).ToString("s"))">@((Model.PublishedOn??Model.ModifiedOn).ToString("MMM d, yyyy"))</time></section>
  </article>
