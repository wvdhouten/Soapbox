@model Post

<header>
  <div class="container relative">
    <h1><blog-link post="Model" /></h1>
    <div class="quick-actions" is-authorized>
      <edit-post post="Model" class="top-right"><i class="fa fa-edit"></i></edit-post>
    </div>
    <div class="meta-data">
      <div>
        <i class="fa fa-calendar"></i>
        <time datetime="@Model.PublishedOn.ToString("s")">@Model.PublishedOn.ToString("MMM d, yyyy")</time>
      </div>
      <div>
        <i class="fa fa-user-circle"></i>
        <blog-link author="@Model.Author" />
      </div>
      <div>
        <i class="fa fa-tags"></i>
        <div class="tag-list">
        @foreach(var category in Model.Categories)
        {
          <div class="tag"><blog-link category="category" /></div>
        }
        </div>
      </div>
    </div>
  </div>
</header>
