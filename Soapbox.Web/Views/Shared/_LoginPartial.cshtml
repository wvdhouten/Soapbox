@using Microsoft.AspNetCore.Identity
@inject SignInManager<SoapboxUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
  <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin panel</a></li>
  <li><a asp-area="" asp-controller="Account" asp-action="Index">Profile</a> <span>(@User.Identity.Name)</span></li>
  <li>
    <form id="logout" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Pages", new { Area = "" })" method="post" style="display: none;"></form>
    <a asp-area="" asp-controller="Account" asp-action="Logout" submit-form="logout">Sign out</a>
  </li>
}
else
{
  <li><a asp-area="" asp-controller="Account" asp-action="Login">Sign in</a></li>
}
