@using Soapbox.Application
@using Soapbox.Domain.Common
@model IPagedList<Post>
@inject IOptionsSnapshot<SiteSettings> settings
@{
  ViewData[Constants.PageTitle] = "Blog";
}

@if (Model.Items.Count > 0)
{
  @switch (settings.Value.BlogPageLayout)
  {
    case BlogPageLayout.Posts:
      <partial name="_PostsPage" model="Model" />
      break;
    case BlogPageLayout.Excerpts:
      <partial name="_ExcerptsPage" model="Model" />
      break;
    case BlogPageLayout.Cards:
      <partial name="_CardsPage" model="Model" />
      break;
  }
}
else
{
  <partial name="_NoPosts" />
}
