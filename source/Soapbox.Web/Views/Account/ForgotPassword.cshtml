@using Soapbox.Application
@using Soapbox.Application.Constants
@using Soapbox.Identity.Authentication
@using Soapbox.Identity.Password.ForgotPassword
@{
  ViewData[ViewConstants.PageTitle] = "Forgot password";
}

@model ForgotPasswordRequest
<div class="container content">
  <div class="box">
    <header class="centered">
      <h1>Forgot your password?</h1>
    </header>

    <div class="separator"></div>

    <section>
      <form id="forgot-password" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
          <input asp-for="Email" />
          <span asp-validation-for="Email"></span>
        </div>
      </form>
    </section>

    <div class="actions centered">
      <button form="forgot-password" type="submit" class="large">Submit</button>
      <a asp-area="" asp-controller="Account" asp-action="Login" role="button" class="outline large">Back</a>
    </div>
  </div>
</div>
