@using Soapbox.Application
@using Soapbox.Application.Constants
@using Soapbox.Application.Media.UploadFiles
@model UploadFilesRequest
@{
  ViewData[ViewConstants.PageTitle] = "Upload files";
}

<div class="container content">
  <form method="post" autocomplete="off" enctype="multipart/form-data">
    <header>
      <h1>Upload Files</h1>
    </header>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group horizontal">
      <label asp-for="Files"></label>
      <input asp-for="Files" type="file" multiple />
    </div>
    <div class="button-group">
      <button type="submit">Upload</button>
    </div>
  </form>
</div>
