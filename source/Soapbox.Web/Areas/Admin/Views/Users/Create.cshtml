@using Soapbox.Application
@using Soapbox.Application.Constants
@using Soapbox.Identity.Users.CreateUser
@model CreateUserRequest
@{
  ViewData[ViewConstants.PageTitle] = "Create user";
}

<div class="container content">
  <header>
    <h1>Create user</h1>
  </header>
  <form method="post" autocomplete="off">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group horizontal">
      <label asp-for="@Model.Username"></label>
      <input asp-for="@Model.Username" />
    </div>
    <div class="form-group horizontal">
      <label asp-for="@Model.Email"></label>
      <input asp-for="@Model.Email" />
    </div>
    <div class="form-group horizontal">
      <label asp-for="@Model.DisplayName"></label>
      <input asp-for="@Model.DisplayName" />
    </div>
    <div class="form-group horizontal">
      <label asp-for="@Model.Role"></label>
      <select asp-for="@Model.Role" asp-items="Html.GetEnumSelectList<UserRole>()">
        <option value="" selected>Please select</option>
      </select>
    </div>
    <div class="button-group">
      <button type="submit">Create</button>
    </div>
  </form>
</div>
